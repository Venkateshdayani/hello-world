pipeline{
    agent any
    parameters{
        string (name: 'Branch', defaultValue: 'master', description: 'branch to integrate')
        choice (name: 'choices', choices:['package','install'], description: 'choice of you')
    }
    environment{
        name = 'Venkateshdayani'
    }

    stages{
        stage ('scm'){
            when{
                branch "${params.Branch}"
                not {branch 'main'}
            }
            options{
                timeout(time:1, unit:'HOURS')
                timestamps()
            }
            steps{
                git branch: "${params.Branch}", url:'https://github.com/Venkateshdayani/hello-world.git'
            }
        }
        stage ('build'){
            steps{
                sh "mvn ${params.choices}"
                echo env.name
            }
        }
        stage ('deploy'){
            agent {
                label 'ansible'
            }
            steps{
                sh 'cd hello-world && ansible-playbook -i hosts deploy.yaml'
            }
        }
    }
    post{
        success {
            archive '**/*.war'
            junit '**/TEST-*.xml'
        }
        failure {
            echo 'failed'
        }
        always {
            echo 'finished'
        }
        unstable{
            echo 'unstable'
        }
        unsuccessful{
            echo 'unsuccessful'
        }
    }

}